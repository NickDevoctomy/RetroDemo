<Scene name="Main">

    <Resources>
        <Font id="DefaultFont" />
        <NineSliceTexture
            id="surface"
            path="Content/Textures/surface.png"
            top="4"
            left="4"
            bottom="4"
            right="4" />
        <NineSliceTexture
            id="surfaceGrey"
            path="Content/Textures/surfacegrey.png"
            top="4"
            left="4"
            bottom="4"
            right="4" />
        <NineSliceTexture
            id="border"
            path="Content/Textures/border.png"
            top="4"
            left="4"
            bottom="4"
            right="4" />
        <NineSliceTexture
            id="buttonUp"
            path="Content/Textures/greybuttonup.png"
            top="4"
            left="4"
            bottom="8"
            right="4" />
        <NineSliceTexture
            id="buttonDown"
            path="Content/Textures/greybuttondown.png"
            top="6"
            left="4"
            bottom="6"
            right="4" />
        <NineSliceTexture
            id="tab"
            path="Content/Textures/tab.png"
            top="4"
            left="4"
            bottom="4"
            right="4" />
    </Resources>

    <Components>
        <RadialRetroGradient id="sunset"
                             centreX="50%"
                             centreY="-80pxFromBottom"
                             radius="100%Width"
                             fromColor="Yellow"
                             toColor="Purple"
                             gradientStops="8" />
        
        <MiniParallaxScroller
            name="Parallax"
            viewportWidth="auto"
            viewportHeight="auto">
            <Layers>
                <Layer
                    path="Content/Textures/grass.png"
                    speed="6.0"
                    startYOffset="0" />
                <Layer
                    path="Content/Textures/road.png"
                    speed="4.0"
                    startYOffset="30" />
                <Layer
                    path="Content/Textures/sandyrocks.png"
                    speed="2.0"
                    startYOffset="60" />
            </Layers>
        </MiniParallaxScroller>

        <Sprite type="RetroLibrary.RetroSpriteTabbedContainer, RetroLibrary"
                name="TabbedContainer"
                x="25"
                y="35"
                width="400"
                height="300"
                foregroundColor="White">
            <TabAppearance
                pageTextureRef="surfaceGrey"
                pageTint="LightGray"
                pageAlpha="0.5"
                tabUpTextureRef="tab"
                tabUpTint="LightGray"
                tabUpAlpha="0.1"
                tabDownTextureRef="tab"
                tabDownTint="LightGray"
                tabDownAlpha="0.5" />
            <TabPages>

                <TabPage title="Apple">
                    <Sprite type="RetroLibrary.RetroSpriteGroupContainer, RetroLibrary"
                            name="TestGroupContainer"
                            x="8"
                            y="8"
                            width="380"
                            height="250"
                            text="Some really long text in here!"
                            foregroundColor="White">
                        <Border
                            textureRef="surface"
                            tint="LightGray"
                            alpha="0.5"
                            outerTopMargin="8" />
                        <GroupLabel
                            textureRef="surface"
                            tint="Red" />
                        <InnerMargins
                            left="8"
                            top="32"
                            right="8"
                            bottom="8" />
                        <Children>
                            <Sprite type="RetroLibrary.RetroSpriteNineSliceButton, RetroLibrary"
                                    name="TestButton"
                                    x="0"
                                    y="0"
                                    width="200"
                                    height="50"
                                    text="Toggle Button"
                                    isToggleButton="true"
                                    foregroundColor="White"
                                    upTint="LightGray"
                                    downTint="Red"
                                    upTextureRef="buttonUp"
                                    downTextureRef="buttonDown" />
                            <Sprite type="RetroLibrary.RetroSpriteLabel, RetroLibrary"
                                    name="TestProgressBarLabel"
                                    x="0"
                                    y="50"
                                    width="200"
                                    height="32"
                                    text="Progress Bar:"
                                    foregroundColor="Black" />
                            <Sprite type="RetroLibrary.RetroSpriteProgressBar, RetroLibrary"
                                    name="TestProgressBar"
                                    x="0"
                                    y="83"
                                    width="200"
                                    height="32"
                                    value="0.5"
                                    borderTextureRef="border"
                                    borderTint="Red" />
                            <Sprite type="RetroLibrary.RetroSpriteCheckBox, RetroLibrary"
                                    name="TestCheckBox"
                                    x="0"
                                    y="120"
                                    width="150"
                                    height="32"
                                    text="Check Me!"
                                    foregroundColor="Black"
                                    boxTextureRef="surface"
                                    isChecked="false" />
                        </Children>
                    </Sprite>
                </TabPage>

                <TabPage title="Hello World!!!">
                    <Sprite type="RetroLibrary.RetroSpriteSliderBar, RetroLibrary"
                            name="TestSliderBar"
                            x="8"
                            y="8"
                            width="350"
                            height="32"
                            sliderBarTextureRef="surfaceGrey"
                            sliderBarTint="DarkGray"
                            buttonTextureRef="surfaceGrey"
                            buttonTint="Red"
                            buttonHoverTint="LightPink" />
                </TabPage>

                <TabPage title="Oranges">
                    <Sprite type="RetroLibrary.RetroSpriteNineSliceButton, RetroLibrary"
                            name="OrangeButton"
                            x="8"
                            y="8"
                            width="200"
                            height="50"
                            text="Orange"
                            isToggleButton="false"
                            foregroundColor="White"
                            upTint="Orange"
                            downTint="Orange"
                            upTextureRef="buttonUp"
                            downTextureRef="buttonDown" />
                </TabPage>

            </TabPages>
        </Sprite>

        <Sprite type="RetroLibrary.RetroSpriteNineSliceButton, RetroLibrary"
                name="ExitButton"
                anchor="TopRight"
                offsetX="-208"
                offsetY="8"
                width="200"
                height="50"
                text="Exit"
                foregroundColor="White"
                upTint="Green"
                downTint="Green"
                upTextureRef="buttonUp"
                downTextureRef="buttonDown" />
    </Components>
</Scene>